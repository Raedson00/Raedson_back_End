Questão 11:
let resultado = 0;
let numero = 7;
let interacao = 1;
while(interacao <= 10) {
    resultado = numero + interacao;
    console.log('Soma: '+numero+' + '+interacao+' = '+resultado);
    interacao++;
}
console.log(' ');

interacao = 1;

while(interacao <= 10) {
    resultado = numero - interacao;
    console.log('Subtração: '+numero+' - '+interacao+' = '+resultado);
    interacao++;
}
console.log(' ');

interacao = 1;

while(interacao <= 10) {
    resultado = numero * interacao;
    console.log('Multiplicação: '+numero+' * '+interacao+' = '+resultado);
    interacao++;
}

console.log(' ');
interacao = 0;

while(interacao <= 10) {
    resultado = numero / interacao;
    console.log('Divisão: '+numero+' / '+interacao+' = '+resultado);
    interacao++;
}

Questão 12:
let resultado = 0;
let numero = 2;
let interacao = 0; 

while(interacao <= 20) {
    resultado = interacao % numero;
    if(resultado == 0) {
        console.log(interacao);
    }
    interacao++;
}

