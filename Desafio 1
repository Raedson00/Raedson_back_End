Questão 3:
let preco = 50;
let desconto = 0.2;
let desconto_eqv = (preco * desconto);
let precoFinal = (preco - desconto_eqv);

console.log ('Preço = ' +preco);
console.log('Desconto = '+ desconto +' e Equivalente = '+ desconto_eqv);
console.log('Preço final com desconto = '+ precoFinal);

