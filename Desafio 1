Questão 6:
let nota = 10;

if(nota >= 7 && nota <= 10) {
    console.log('Aprovado!');
}else{
    if(nota >= 5 && nota <= 6 ) {
        console.log('Recuperação!');
    } if(nota >= 0 && nota < 5 ){
        console.log('Reprovado!');
    }
    else{
        console.log('valor invalido!');
    }
}

