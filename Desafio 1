let numero2 = 2; // Definição da variável que recebe o valor do número.
let resultado = 0; // Definição da variável que recebe o valor da soma.

resultado = numero1 + numero2; // soma dos dois números
console.log('valor da soma = '+resultado); // imprime o resulatdo concatenando com a string

